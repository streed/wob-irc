# IRC Configuration
IRC_HOST=irc.libera.chat
IRC_PORT=6667
IRC_NICK=ollama-bot
IRC_USERNAME=ollama
IRC_REALNAME=Ollama IRC Bot
IRC_CHANNELS=#test,#mychannel
IRC_TLS=false

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Bot Configuration
MESSAGE_DEBOUNCE_MS=2000
SYSTEM_PROMPT=You are a helpful IRC bot assistant. You respond to messages in a concise and friendly manner. Keep your responses brief and appropriate for IRC chat.

# Context Configuration
# Number of recent messages to keep in the buffer for context (default: 50)
MESSAGE_BUFFER_SIZE=50
# How often to update the channel nick list in milliseconds (default: 60000 = 1 minute)
NICK_UPDATE_INTERVAL_MS=60000

# Debug Configuration
# Enable verbose IRC protocol logging (includes all raw IRC messages)
# Useful for debugging connection issues
IRC_DEBUG=false
